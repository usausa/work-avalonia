<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WorkApp.Views"
        mc:Ignorable="d"
        x:Class="WorkApp.Views.MainWindow"
        x:DataType="views:MainWindowViewModel"
        Title="WorkApp"
        Width="800" Height="480"
        Background="Black"
        CanResize="False" Icon="/Assets/avalonia-logo.ico" KeyDown="OnKeyDown" KeyUp="OnKeyUp"
        d:DesignHeight="480" d:DesignWidth="800">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <views:MainWindowViewModel />
    </Design.DataContext>

    <Grid>

        <TextBlock HorizontalAlignment="Right"
                   Foreground="White"
                   Text="{Binding Fps, StringFormat={}{0} fps}"
                   FontFamily="Courier New" />

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="White"
                   FontSize="72"
                   Text="{Binding Speed}"
                   FontFamily="Courier New" />
    </Grid>

</Window>
